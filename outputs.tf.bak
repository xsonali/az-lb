# Resource Group
output "resource_group_name" {
  description = "The name of the resource group"
  value       = azurerm_resource_group.az_lb_rg.name
}

# Virtual Machines
output "vm_names" {
  value = [for vm in azurerm_linux_virtual_machine.vms_pool : vm.name]
}

output "vm_private_ips" {
  description = "Private IP addresses of the virtual machines"
  value       = [for nic in azurerm_network_interface.be_pool_nics : nic.private_ip_address]
}

# Load Balancer
output "lb_backend_pool_id" {
  description = "ID of the backend address pool for the Load Balancer"
  value       = azurerm_lb_backend_address_pool.be_pool.id
}

